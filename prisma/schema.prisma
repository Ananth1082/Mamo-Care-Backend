generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Doctor {
  id    Int     @id @default(autoincrement())
  name String  
}

model Patient {
  id String @id
  name String
  phone_number String
  blood_group BloodGroup
}

enum BloodGroup {
  Aplus
  Aminus
  Bplus
  Bminus
  Oplus
  Ominus
  ABplus
  ABminus
}